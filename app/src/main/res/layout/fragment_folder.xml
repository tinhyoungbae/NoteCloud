<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232323"
    tools:context=".Fragment.FolderFragment">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="0dp"
        android:layout_below="@+id/folder_banner"
        android:background="@drawable/custom_view" />

    <TextView
        android:id="@+id/folder_banner"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="-15dp"
        android:background="@drawable/custom_line_border"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:paddingStart="7dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="NOTE CLOUD"
        android:textColor="@color/white"
        android:textSize="23sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-100dp"
        android:layout_marginStart="130dp"
        android:layout_below="@+id/view"
        android:layout_alignParentLeft="true"
        android:text="Upload"
        android:textSize="17sp"
        android:textAllCaps="false"
        android:background="@drawable/custom_line_border"
        android:id="@+id/uploadButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-100dp"
        android:layout_below="@+id/view"
        android:layout_marginEnd="40dp"
        android:text="Open"
        android:textSize="18dp"
        android:layout_alignParentRight="true"
        android:textAllCaps="false"
        android:background="@drawable/custom_line_border"
        android:id="@+id/openButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noteListBanner"
        android:text="Danh sách ghi chú trên cloud"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentLeft="true"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@id/view"
        android:gravity="center"
        android:background="@drawable/custom_line_border"
        android:textColor="@color/white"
        />

    <View
        android:id="@+id/lineBar"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/noteListBanner"
        android:background="#c0c0c0"/>

    <GridView
        android:id="@+id/gridviewNoteCloud"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lineBar"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="50dp"
        android:columnWidth="2dp"
        android:gravity="center"
        android:numColumns="2"
        android:textSize="30dp" />

</RelativeLayout>