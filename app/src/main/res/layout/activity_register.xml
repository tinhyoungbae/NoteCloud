<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/note_backgroud"
    tools:context=".RegisterActivity">

    <View
        android:id="@+id/viewContain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/custom_view_note" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginBanner"
        android:text="Đăng ký"
        android:textSize="23sp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:layout_below="@+id/viewContain"
        android:background="@drawable/custom_view_note"
        android:layout_marginTop="-610dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        />

    <View
        android:id="@+id/lineBar"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:layout_below="@id/loginBanner"
        android:background="#c0c0c0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userBanner"
        android:layout_alignParentLeft="true"
        android:text="Tên đăng nhập"
        android:textSize="17dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:background="@drawable/custom_line_border"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/lineBar"
        android:textColor="@color/white"
        />

    <EditText
        android:id="@+id/userID"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/userBanner"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/custom_edittext"
        android:drawableLeft="@drawable/user_ico"
        android:drawablePadding="15dp"
        android:hint="Nhập tên đăng nhập" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passwordBanner"
        android:text="Mật khẩu"
        android:textSize="17dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/custom_line_border"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/userID"
        android:textColor="@color/white"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="textPassword"
        android:id="@+id/password"
        android:hint="Nhập mật khẩu"
        android:layout_marginTop="-10dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentLeft="true"
        android:drawableLeft="@drawable/password"
        android:drawablePadding="15dp"
        android:layout_below="@id/passwordBanner"
        android:background="@drawable/custom_edittext"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rePasswordBanner"
        android:text="Xác nhận mật khẩu"
        android:textSize="17dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/custom_line_border"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/password"
        android:textColor="@color/white"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="textPassword"
        android:id="@+id/repeatPassword"
        android:hint="Nhập lại mật khẩu"
        android:layout_marginTop="-10dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentLeft="true"
        android:drawableLeft="@drawable/password"
        android:drawablePadding="15dp"
        android:layout_below="@id/rePasswordBanner"
        android:background="@drawable/custom_edittext"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerButton"
        android:text="Đăng ký"
        android:layout_marginTop="50dp"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:layout_below="@+id/repeatPassword"
        android:background="@drawable/custom_line_border"
        android:backgroundTint="@color/black"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>